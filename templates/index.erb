<h2>Superwalllll</h2>

<div id="post-form">
  <form action="/posts" method="post">
    <div>
      <textarea class="icarus" name="body"></textarea>
    </div>
    <div>
      <input class="button" type="submit" value="Post">
    </div>
  </form>
</div>
<ol class="post-list">
  <% posts.each do |post| %>
    <li>
      <p><%= post.created_at.strftime('%A, %B %-d, %Y') %></p>
      <p>
        <form action="/posts/<%= post.id%>/upvote" method="post">
          <p><strong>Walls</strong>:<%= post.votes %></p>
          <input class="button" type="submit" value="Upwall!">
        </form>
      </p>  
      <p>
        <form action="/posts/<%= post.id%>/downvote" method="post">
          <input class="button" type="submit" value="Downwall!">
        </form>
      </p>  
      <p><%= escape(post.body) %></p>
      <form action="/posts/<%= post.id %>/delete" method="post">
        <div class="delete">
          <input class="button" type="submit" value="Delete">
        </div>
      </form>  
    </li>
  <% end %>
</ol>